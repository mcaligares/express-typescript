{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "controllers/*": ["./controllers/*"],
      "models/*": ["./models/*"],
      "middlewares/*": ["./middlewares/*"],
      "repositories/*": ["./repositories/*"],
      "routes/*": ["./routes/*"],
      "services/*": ["./services/*"],
      "utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.tsx"],
  "exclude": ["src/**/*.spec.ts", "node_modules", "__test__"]
}
