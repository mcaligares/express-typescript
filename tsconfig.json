{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "@/endpoints/*": ["./endpoints/*"],
      "@/models/*": ["./models/*"],
      "@/middlewares/*": ["./middlewares/*"],
      "@/repositories/*": ["./repositories/*"],
      "@/routes": ["./routes/index"],
      "@/routes/*": ["./routes/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.tsx", "__test__"],
  "exclude": ["src/**/*.spec.ts", "node_modules"]
}
