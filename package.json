{
  "name": "express-api-template",
  "version": "1.0.0",
  "description": "Express API Template Project",
  "main": "index.js",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "nodemon",
    "serve": "npm run build && node build/index.js",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "lint": "eslint . --ext .ts",
    "test": "DOTENV_CONFIG_PATH=.env.test jest --verbose --setupFiles dotenv/config",
    "test:coverage": "npm run test -- --detectOpenHandles --silent --coverage",
    "test:dev": "npm run test -- --watchAll",
    "seed": "npm run build && sequelize-cli db:seed:all",
    "seed:undo": "npm run build && sequelize-cli db:seed:undo",
    "migration": "npm run build && sequelize-cli db:migrate",
    "migration:undo": "npm run build && sequelize-cli db:migrate:undo"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:coverage && npm run lint"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "log4js": "^6.9.1",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.33.0",
    "sequelize-typescript": "^2.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.15",
    "@types/crypto-js": "^4.1.3",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/node": "^20.8.9",
    "@types/sequelize": "^4.28.17",
    "@types/supertest": "^2.0.15",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/validator": "^13.11.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier-plugin-organize-imports": "^3.2.3",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@/endpoints": "src/endpoints",
    "@/models": "src/models",
    "@/middlewares": "src/middlewares",
    "@/repositories": "src/repositories",
    "@/routes": "src/routes",
    "@/services": "src/services",
    "@/utils": "src/utils"
  }
}
